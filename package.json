{
  "name": "soulbridgeai-unified",
  "version": "1.0.0",
  "description": "SoulBridge AI - Unified AI Companion Platform",
  "scripts": {
    "build": "npm install --prefix frontend && npm run build --prefix frontend && pip install -r requirements.txt",
    "start": "gunicorn backend.app:app --bind 0.0.0.0:$PORT",
    "dev": "concurrently \"npm run dev --prefix frontend\" \"python backend/app.py\"",
    "install-frontend": "npm install --prefix frontend",
    "build-frontend": "npm run build --prefix frontend"
  },
  "keywords": ["ai", "chatbot", "companion", "flask", "react"],
  "author": "GamerJay",
  "license": "MIT",
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}