# Environment Variables for SoulBridge AI

# OpenAI Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here

# Session Security
SESSION_SECRET=your_secure_session_secret_here

# Database
DATABASE_URL=sqlite:///soulbridge.db

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_ADDRESS=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Stripe Payments (DISABLED in this build)
# STRIPE_SECRET_KEY=sk_test_your_test_key_here
# STRIPE_PUBLISHABLE_KEY=pk_test_your_test_key_here

# Security Configuration (NEW)
DEV_EMAIL=your_dev_email@example.com
DEV_PASSWORD=your_secure_dev_password
APP_NAME=SoulBridge AI

# Security Settings (Optional)
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900
SESSION_TIMEOUT=3600
PASSWORD_MIN_LENGTH=8
REQUIRE_2FA_FOR_ADMIN=true

# Feature Flags (Optional)
FEATURE_2FA_ENABLED=true
FEATURE_AUDIT_LOGGING=true
FEATURE_SESSION_MANAGEMENT=true

# Development Settings
DEBUG=False
FLASK_ENV=production
PORT=8080

# Railway Specific
RAILWAY_ENVIRONMENT=production
PYTHONPATH=/app/backend