{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "module": "commonjs",
        "outDir": "out",
        "rootDir": "src",
        "strict": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "extension.js"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}