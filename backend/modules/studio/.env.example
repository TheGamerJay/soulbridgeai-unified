# Mini Studio Docker Environment Configuration
# Copy this file to .env and set your actual values

# OpenAI API Key (required for lyrics generation)
OPENAI_API_KEY=sk-your-actual-openai-key-here

# Service URLs (adjust if deploying remotely)
STUDIO_API_URL=http://localhost:8080
STUDIO_BEATS_URL=http://localhost:7001
STUDIO_VOCALS_URL=http://localhost:7002

# Database Configuration
POSTGRES_USER=studio
POSTGRES_PASSWORD=studio
POSTGRES_DB=studio

# Storage Configuration
STORAGE_DIR=/data/assets